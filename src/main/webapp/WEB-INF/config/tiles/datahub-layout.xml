<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="login-layout" template="/WEB-INF/views/layout/loginLayout.jsp">
        <put-attribute name="content"    value="" />
    </definition>

    <definition name="empty-layout" template="/WEB-INF/views/layout/empty.jsp">
        <put-attribute name="content"    value="" />
    </definition>

    <definition name="login" extends="login-layout">
        <put-attribute name="content"   value="/WEB-INF/views/login.jsp" />
    </definition>

    <definition name="join" extends="login-layout">
        <put-attribute name="content"   value="/WEB-INF/views/join.jsp" />
    </definition>

    <definition name="empty" extends="empty-layout">
        <put-attribute name="content"   value="/WEB-INF/views/index.jsp" />
    </definition>

    <definition name="datahub-layout" template="/WEB-INF/views/layout/layout.jsp">
        <put-attribute name="header"    value="/WEB-INF/views/layout/header.jsp" />
        <put-attribute name="sidebar"    value="/WEB-INF/views/layout/sidebar.jsp" />
        <put-attribute name="footer"    value="/WEB-INF/views/layout/footer.jsp" />
    </definition>

    <definition name="main" extends="datahub-layout">
        <put-attribute name="content"   value="/WEB-INF/views/main.jsp" />
    </definition>

    <definition name="*" extends="datahub-layout">
        <put-attribute name="content"   value="/WEB-INF/views/{1}.jsp" />
    </definition>

    <definition name="pdf" extends="empty-layout">
        <put-attribute name="content"   value="/WEB-INF/views/pdf.jsp" />
    </definition>

</tiles-definitions>