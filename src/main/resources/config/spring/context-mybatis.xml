<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<bean id="sqlSessionPostgres1" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource-Postgres1" />
		<property name="configLocation" value="classpath:/config/mybatis/mybatis-config.xml" />
		<property name="mapperLocations" value="classpath:/config/mybatis/mappers/postgres1/*/*.xml" />
	</bean>

	<bean id="sqlSessionPostgres" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource-Postgres" />
		<property name="configLocation" value="classpath:/config/mybatis/mybatis-config.xml" />
		<property name="mapperLocations" value="classpath:/config/mybatis/mappers/postgres/*/*.xml" />

	</bean>

	<bean id="scannerMysql" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="datahub.**.mappers.pg1"/>
		<property name="sqlSessionFactoryBeanName" value="sqlSessionPostgres1"/>
	</bean>

	<bean id="scannerPostgres" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="datahub.**.mappers.pg"/>
		<property name="sqlSessionFactoryBeanName" value="sqlSessionPostgres"/>
	</bean>

	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="datahub.**.mappers" />
	</bean>




	<context:component-scan base-package="datahub.**.service"/>
</beans>